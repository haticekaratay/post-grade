<div class="field_with_errors">
    <% if object.errors.any? %>
        <ul>
            <div class="alert alert-danger" role="alert">
                <% object.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </div>
        </ul>
    <% end %> 
</div>
